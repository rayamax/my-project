<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Maxisport - Accueil{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('homepage') }}">MAXISPORT</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('homepage') }}">Accueil </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('list_articles') }}">Articles</a>
                </li>
                {% if app.user %}
                    {% if app.user.username == 'admin' %}
                    <li class="nav-item ">
                        <a class="nav-link" href="{{ path('app_admin_article_new') }}">Creer un article</a>
                    </li>
                    {% endif %}
                {% endif %}
                {% if not app.user %}
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('security_login') }}">Connexion </a>
                </li>
                {% else %}
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('security_logout') }}">Deconnexion </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('account_manager') }}">{{ app.user.username }}</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </nav>
    <div id="container">

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </div>
    </body>
</html>
